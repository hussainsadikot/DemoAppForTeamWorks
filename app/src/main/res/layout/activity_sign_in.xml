<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity">

    <Button
        android:id="@+id/back_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:layout_margin="16dp"

        />


    <EditText
        android:id="@+id/et_email_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="36dp"

        android:background="@drawable/box_rectangle"

        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="4dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/et_pwd_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email_signin"
        android:layout_marginStart="36dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/box_rectangle"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="4dp"

        android:textColorHint="@android:color/darker_gray"
        android:textSize="24sp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/sign_in_button_In_SignIn_activity"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textSize="12sp"
        android:layout_centerInParent="true"
        android:layout_below="@id/et_pwd_signin"
        android:textAlignment="center"
        android:background="@drawable/box_shape"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textAllCaps="false"

        android:gravity="center" />




</RelativeLayout>
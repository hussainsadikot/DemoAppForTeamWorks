<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/et_email_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="36dp"

        android:background="@drawable/box_rectangle"

        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="4dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24sp" />


    <EditText
        android:id="@+id/et_name_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email_register"

        android:layout_marginStart="36dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"

        android:background="@drawable/box_rectangle"
        android:hint="Name"
        android:inputType="text"
        android:padding="4dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@android:color/darker_gray"
        android:textSize="24sp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/et_pwd_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_name_register"
        android:layout_marginStart="36dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/box_rectangle"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="4dp"

        android:textColorHint="@android:color/darker_gray"
        android:textSize="24sp"
        android:textStyle="bold"

        />

    <EditText
        android:id="@+id/et_confirm_pwd_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_pwd_register"
        android:layout_marginStart="36dp"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/box_rectangle"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="4dp"

        android:textColorHint="@android:color/darker_gray"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_confirm_pwd_register"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/box_grey"
        android:gravity="center"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="12sp" />


</RelativeLayout>